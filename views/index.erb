<div class="row" id="word">
  <!-- <div class="col-sm-12" > -->
      <span><%= @hangman.temp_word %></span>
  <!-- </div> -->
</div>
<div class="row">
  <div class="col-xs-2"></div>
  <div class="col-xs-4">
    <div class="well" id="guess_form">
      <p class="<%= @hangman.message_style %>"> <%= @hangman.message %> </p>
      <% unless @hangman.game_over %>
      <form method="post" action="/guess">
        <div class="form-group" name="f1">
          <input type="text" name="guess" class="form-control" autofocus>
        </div>
        <div class="form-group">
          <button type="submit" class="btn btn-primary">Submit</button>
        </div>
      </form>
      <% end %>

      <% if @hangman.try > 0 %> <p> <%= @hangman.misses %> </p> <% end %>
    </div>
  </div>
  <div class="col-xs-4" id="hangman">
      <img src="img/hang_<%= @hangman.try %>.png" alt="hangman">
  </div>
  <div class="col-xs-2"></div>
</div>
