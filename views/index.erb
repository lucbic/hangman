<div class="row" id="word">
  <!-- <div class="col-sm-12" > -->
      <span><%= @hanger.get_temp_word %></span>
  <!-- </div> -->
</div>
<div class="row">
  <div class="col-xs-2"></div>
  <div class="col-xs-4">
    <div class="well" id="guess_form">
      <p class="<%= @hanger.message_style %>"> <%= @hanger.message %> </p>
      <% if !@hanger.game_over %>
      <form method="post" action="/guess">
        <div class="form-group" name="f1">
          <input type="text" name="guess" class="form-control" autofocus>
        </div>
        <div class="form-group">
          <button type="submit" class="btn btn-primary">Submit</button>
        </div>
      </form>
      <% end %>

      <% if @hanger.try > 0 %> <p> <%= @hanger.get_misses %> </p> <% end %>
    </div>
  </div>
  <div class="col-xs-4" id="hanger">
      <img src="img/hang_<%= @hanger.try %>.png" alt="Hanger">
  </div>
  <div class="col-xs-2"></div>
</div>
